<sdf version="1.6">
  <world name="two_joint_arm_world">

    <!-- Ground Plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>10 10</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>10 10</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Robotic Arm Model -->
    <model name="two_joint_arm">
      
      <!-- Base Link -->
      <link name="base_link">
        <pose>0 0 0.1 0 0 0</pose>
        <collision name="base_collision">
          <geometry>
            <box>
              <size>0.1 0.1 0.2</size>
            </box>
          </geometry>
        </collision>
        <visual name="base_visual">
          <geometry>
            <box>
              <size>0.1 0.1 0.2</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- First Link (attached to base) -->
      <link name="link1">
        <pose>0 0 0.35 0 0 0</pose>
        <collision name="link1_collision">
          <geometry>
            <box>
              <size>0.05 0.05 0.5</size>
            </box>
          </geometry>
        </collision>
        <visual name="link1_visual">
          <geometry>
            <box>
              <size>0.05 0.05 0.5</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- Second Link -->
      <link name="link2">
        <pose>0 0 0.75 0 0 0</pose>
        <collision name="link2_collision">
          <geometry>
            <box>
              <size>0.04 0.04 0.4</size>
            </box>
          </geometry>
        </collision>
        <visual name="link2_visual">
          <geometry>
            <box>
              <size>0.04 0.04 0.4</size>
            </box>
          </geometry>
        </visual>
      </link>

      <!-- Joints -->
      <joint name="base_to_link1" type="revolute">
        <parent>base_link</parent>
        <child>link1</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
          </limit>
        </axis>
        <pose>0 0 0.3 0 0 0</pose>
      </joint>

      <joint name="link1_to_link2" type="revolute">
        <parent>link1</parent>
        <child>link2</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit>
            <lower>-1.57</lower>
            <upper>1.57</upper>
          </limit>
        </axis>
        <pose>0 0 0.3 0 0 0</pose>
      </joint>
    </model>
  </world>
</sdf>
